pipeline {
    agent any

    tools {
        maven 'Maven-3.9.6'
    }

    stages {

        stage('Check Tools') {
            steps {
                bat 'mvn -version'
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Package') {
            steps {
                bat 'mvn package'
            }
        }
    }
}
