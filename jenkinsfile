pipeline {
    agent any

    stages {

        stage('Check Java Version') {
            steps {
                bat 'java -version'
            }
        }

        stage('Compile Java Code') {
            steps {
                bat 'javac src/calculator.java'
            }
        }

        stage('Run Java Program') {
            steps {
                bat 'java -cp src calculator'
            }
        }
    }
}
