pipeline {
    agent any

    stages {

        stage('Check Java Version') {
            steps {
                sh 'java -version'
            }
        }

        stage('Compile Java Code') {
            steps {
                sh 'javac src/Calculator.java'
            }
        }

        stage('Run Java Program') {
            steps {
                sh 'java -cp src Calculator'
            }
        }
    }
}
